<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#F0F0F0"
        android:layout_height="match_parent"
        tools:context=".empActivity.ComplaintDetail">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:background="@drawable/main_background"
            android:layout_height="?attr/actionBarSize">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                app:title="@string/app_name"
                app:titleTextColor="#FFFFFF"
                android:layout_height="match_parent"/>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Select Complaint Type"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Device Faulty"
                        android:paddingStart="5dp"
                        android:paddingEnd="0dp"
                        android:fontFamily="@font/poppins"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:paddingEnd="5dp"
                        android:buttonTint="@color/colorPrimary"
                        android:paddingStart="0dp"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginStart="20dp"
                    android:background="#BEBEBE"
                    android:layout_marginEnd="30dp"
                    android:layout_height="0.6dp"/>

                <RelativeLayout
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Adapter Faulty"
                        android:paddingStart="5dp"
                        android:paddingEnd="0dp"
                        android:fontFamily="@font/poppins"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:paddingEnd="5dp"
                        android:paddingStart="0dp"
                        android:buttonTint="@color/colorPrimary"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginStart="20dp"
                    android:background="#BEBEBE"
                    android:layout_marginEnd="30dp"
                    android:layout_height="0.6dp"/>

                <RelativeLayout
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Cable Damage"
                        android:paddingStart="5dp"
                        android:paddingEnd="0dp"
                        android:fontFamily="@font/poppins"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:paddingEnd="5dp"
                        android:buttonTint="@color/colorPrimary"
                        android:paddingStart="0dp"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginStart="20dp"
                    android:background="#BEBEBE"
                    android:layout_marginEnd="30dp"
                    android:layout_height="0.6dp"/>

                <RelativeLayout
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Router Faulty"
                        android:paddingStart="5dp"
                        android:paddingEnd="0dp"
                        android:fontFamily="@font/poppins"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:paddingEnd="5dp"
                        android:buttonTint="@color/colorPrimary"
                        android:paddingStart="0dp"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginStart="20dp"
                    android:background="#BEBEBE"
                    android:layout_marginEnd="30dp"
                    android:layout_height="0.6dp"/>

                <RelativeLayout
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="POE Faulty"
                        android:paddingStart="5dp"
                        android:paddingEnd="0dp"
                        android:fontFamily="@font/poppins"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:paddingEnd="5dp"
                        android:paddingStart="0dp"
                        android:buttonTint="@color/colorPrimary"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginStart="20dp"
                    android:background="#BEBEBE"
                    android:layout_marginEnd="30dp"
                    android:layout_height="0.6dp"/>

                <RelativeLayout
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Speed Issue"
                        android:paddingStart="5dp"
                        android:paddingEnd="0dp"
                        android:fontFamily="@font/poppins"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:paddingEnd="5dp"
                        android:paddingStart="0dp"
                        android:buttonTint="@color/colorPrimary"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginStart="20dp"
                    android:background="#BEBEBE"
                    android:layout_marginEnd="30dp"
                    android:layout_height="0.6dp"/>

                <RelativeLayout
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Fibre Power Loss"
                        android:paddingStart="5dp"
                        android:paddingEnd="0dp"
                        android:fontFamily="@font/poppins"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:paddingEnd="5dp"
                        android:buttonTint="@color/colorPrimary"
                        android:paddingStart="0dp"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginStart="20dp"
                    android:background="#BEBEBE"
                    android:layout_marginEnd="30dp"
                    android:layout_height="0.6dp"/>

                <RelativeLayout
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="ONT/ONU Faulty"
                        android:paddingStart="5dp"
                        android:paddingEnd="0dp"
                        android:fontFamily="@font/poppins"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:paddingEnd="5dp"
                        android:buttonTint="@color/colorPrimary"
                        android:paddingStart="0dp"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginStart="20dp"
                    android:background="#BEBEBE"
                    android:layout_marginEnd="30dp"
                    android:layout_height="0.6dp"/>

                <RelativeLayout
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Patch cord break"
                        android:paddingStart="5dp"
                        android:paddingEnd="0dp"
                        android:fontFamily="@font/poppins"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:paddingEnd="5dp"
                        android:paddingStart="0dp"
                        android:buttonTint="@color/colorPrimary"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginStart="20dp"
                    android:background="#BEBEBE"
                    android:layout_marginEnd="30dp"
                    android:layout_height="0.6dp"/>

                <RelativeLayout
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Self damage"
                        android:paddingStart="5dp"
                        android:paddingEnd="0dp"
                        android:fontFamily="@font/poppins"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:paddingEnd="5dp"
                        android:buttonTint="@color/colorPrimary"
                        android:paddingStart="0dp"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginStart="20dp"
                    android:background="#BEBEBE"
                    android:layout_marginEnd="30dp"
                    android:layout_height="0.6dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/continueBtn"
                    android:layout_width="wrap_content"
                    style="@style/Widget.MaterialComponents.Button"
                    app:backgroundTint="@color/greenAppColour"
                    app:cornerRadius="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="50dp"
                    android:text="Continue"
                    android:textColor="#FFFFFF"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="14sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</layout>