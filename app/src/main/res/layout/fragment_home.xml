<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    tools:context=".fragments.main.Home">

    <LinearLayout
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:text="Welcome to"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/poppins"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_semibold"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/imageSlider"
        android:foregroundGravity="center"
        android:overScrollMode="never"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_below="@id/name"
        android:layout_height="120dp"/>

    <LinearLayout
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_below="@id/imageSlider"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingBottom="5dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/bill_pay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            app:cardCornerRadius="5dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:text="Quick Bill Pay"
                android:drawableTop="@drawable/ic_clock"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="15dp"
                android:drawablePadding="5dp"
                android:textSize="12sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/refer_earn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            app:cardCornerRadius="5dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:text="Refer &amp; Earn"
                android:drawableTop="@drawable/ic_refer"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="15dp"
                android:drawablePadding="10dp"
                android:textSize="12sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/complaint_service"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            app:cardCornerRadius="5dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:text="Complaint Request"
                android:drawableTop="@drawable/ic_support"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="15dp"
                android:drawablePadding="5dp"
                android:textSize="12sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_below="@id/v2"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/payment_history"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            app:cardCornerRadius="5dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:text="Payment History"
                android:drawableTop="@drawable/ic_bill"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="15dp"
                android:drawablePadding="5dp"
                android:textSize="12sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/complaint_history"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            app:cardCornerRadius="5dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:text="Complaint History"
                android:drawableTop="@drawable/ic_to_do_list"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="15dp"
                android:drawablePadding="5dp"
                android:textSize="12sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/support"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            app:cardCornerRadius="5dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:text="24 * 7 Support"
                android:drawableTop="@drawable/ic_24_7"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="15dp"
                android:drawablePadding="5dp"
                android:textSize="12sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>