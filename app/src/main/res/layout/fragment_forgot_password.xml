<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.password.ForgotPassword">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/forgotBack"
            android:layout_width="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="11dp"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_back"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/image1"
            android:layout_width="60dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_height="60dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="70dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/signup_background"
                android:layout_height="match_parent">


            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/triangle"
                android:layout_marginEnd="120dp"
                android:elevation="2dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="55dp"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="25dp"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/v1"
                        android:layout_width="wrap_content"
                        android:text="Forgot Password"
                        android:textSize="14sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="25dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/otpText"
                        android:layout_width="wrap_content"
                        android:text="Enter your registered username, email id or mobile no."
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_below="@id/v1"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:layout_below="@id/otpText"
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:hint="Username/Email Id/Mobile no."
                        android:textSize="14sp"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="20dp"
                        android:fontFamily="@font/poppins"
                        android:textColorHint="#777777"
                        android:inputType="text"
                        android:layout_marginTop="40dp"
                        android:background="@android:color/transparent"
                        android:layout_height="wrap_content"/>

                    <View
                        android:id="@+id/v2"
                        android:layout_width="match_parent"
                        android:background="#777777"
                        android:layout_below="@id/username"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="0.5dp"/>

                    <ImageView
                        android:id="@+id/backImage"
                        android:layout_width="match_parent"
                        android:src="@drawable/ic_background_layout"
                        android:scaleY="-1"
                        android:scaleType="fitXY"
                        android:layout_alignParentBottom="true"
                        android:layout_height="70dp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/forgot_sendOTP"
                android:layout_width="120dp"
                style="@style/Widget.MaterialComponents.Button"
                app:cornerRadius="25dp"
                android:layout_alignParentBottom="true"
                android:text="Send OTP"
                android:layout_centerHorizontal="true"
                android:layout_margin="40dp"
                android:elevation="10dp"
                android:textColor="#FFFFFF"
                app:backgroundTint="#43c6ac"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_semibold"
                android:padding="8dp"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>