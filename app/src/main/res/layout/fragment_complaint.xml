<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:background="#F0f0F0"
    tools:context=".fragments.ComplaintService">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:src="@drawable/ic_support"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:layout_height="80dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Complaint Request"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/poppins"
            android:text="Tell us more about the problem:"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_marginStart="15dp"
            android:layout_marginEnd="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="Speed"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:fontFamily="@font/poppins"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingEnd="5dp"
                android:buttonTint="@color/colorPrimary"
                android:paddingStart="0dp"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:background="#BEBEBE"
            android:layout_marginEnd="30dp"
            android:layout_height="0.6dp"/>

        <RelativeLayout
            android:layout_marginStart="15dp"
            android:layout_marginEnd="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="Router"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:textSize="14sp"
                android:fontFamily="@font/poppins"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingEnd="5dp"
                android:buttonTint="@color/colorPrimary"
                android:paddingStart="0dp"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:background="#BEBEBE"
            android:layout_marginEnd="30dp"
            android:layout_height="0.6dp"/>

        <RelativeLayout
            android:layout_marginStart="15dp"
            android:layout_marginEnd="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="Network"
                android:paddingStart="5dp"
                android:fontFamily="@font/poppins"
                android:paddingEnd="0dp"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingEnd="5dp"
                android:buttonTint="@color/colorPrimary"
                android:paddingStart="0dp"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:background="#BEBEBE"
            android:layout_marginEnd="30dp"
            android:layout_height="0.6dp"/>

        <RelativeLayout
            android:layout_marginStart="15dp"
            android:layout_marginEnd="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="Total Breakdown"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:textSize="14sp"
                android:fontFamily="@font/poppins"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingEnd="5dp"
                android:buttonTint="@color/colorPrimary"
                android:paddingStart="0dp"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:background="#BEBEBE"
            android:layout_marginEnd="30dp"
            android:layout_height="0.6dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/poppins"
            android:text="Brief Description"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:gravity="start"
            android:maxLength="85"
            android:hint="Describe briefly Not exceeding 85 characters"
            android:padding="10dp"
            android:fontFamily="@font/poppins"
            android:textSize="14sp"
            android:layout_height="100dp"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="15dp"
            android:backgroundTint="#43c6ac"
            android:fontFamily="@font/poppins_semibold"
            android:padding="12dp"
            android:text="Submit"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>