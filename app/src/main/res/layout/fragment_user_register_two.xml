<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:overScrollMode="never"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    tools:context=".fragments.UserRegisterTwo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:text="User Registration"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Plan Details"
            android:layout_marginStart="20dp"
            android:textSize="13sp"
            android:fontFamily="@font/poppins_semibold"
            android:alpha="0.8"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="match_parent"
            android:hint="Existing Plan"
            android:textSize="14sp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/poppins"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColorHint="#777777"
            android:inputType="number"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:background="#777777"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="0.5dp"/>

        <EditText
            android:layout_width="match_parent"
            android:hint="Offer Plan"
            android:textSize="14sp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/poppins"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColorHint="#777777"
            android:inputType="number"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:background="#777777"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="0.5dp"/>

        <EditText
            android:layout_width="match_parent"
            android:hint="Vendor Name"
            android:textSize="14sp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/poppins"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColorHint="#777777"
            android:inputType="number"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:background="#777777"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="25dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Interested"
                    android:layout_centerVertical="true"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:alpha="0.8"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_height="wrap_content"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:buttonTint="@color/colorPrimary"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text=" Not Interested"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:alpha="0.8"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_height="wrap_content"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:buttonTint="@color/colorPrimary"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:hint="Date"
                    android:textSize="14sp"
                    android:layout_toStartOf="@id/date_picker"
                    android:fontFamily="@font/poppins"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textColorHint="#777777"
                    android:inputType="text"
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/date_picker"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_date_range"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:background="#777777"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_height="0.5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="25dp"
                android:fontFamily="@font/poppins"
                android:text="Remark"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="#FFFFFF"
                android:textColor="#000000"
                android:gravity="start"
                android:hint="remark"
                android:padding="10dp"
                android:fontFamily="@font/poppins"
                android:textSize="14sp"
                android:layout_height="100dp"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/continueBtn"
            android:layout_width="wrap_content"
            style="@style/Widget.MaterialComponents.Button"
            app:backgroundTint="@color/greenAppColour"
            app:cornerRadius="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:text="Submit"
            android:textColor="#FFFFFF"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="14sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="@font/poppins_semibold"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>